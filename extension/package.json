{
	"name": "vscode-puzzle",
	"displayName": "vscode-puzzle",
	"description": "A tool to fetch coding problems to be displayed in VSCode",
	"license": "MIT",
	"publisher": "michaelfromyeg",
	"repository": "github:michaelfromyeg/vscode-puzzle",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extsn.getReddit",
		"onCommand:extsn.getProjectEuler",
		"onCommand:extsn.getCodingBat"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extsn.getReddit",
				"title": "Puzzle: r/dailyprogrammer"
			},
			{
				"command": "extsn.getProjectEuler",
				"title": "Puzzle: Project Euler"
			},
			{
				"command": "extsn.getCodingBat",
				"title": "Puzzle: Coding Bat"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint --fix src --ext ts",
		"dev": "yarn watch",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/mustache": "^4.0.1",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"html-entities": "^1.3.1",
		"mustache": "^4.0.1"
	}
}
